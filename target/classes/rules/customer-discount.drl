import com.example.droolstest.OrderRequest;
import com.example.droolstest.CustomerType;
global com.example.droolstest.OrderDiscount orderDiscount;

dialect "mvel"

rule "Age based discount"
    when
        OrderRequest((age < 20 || age > 50) && amount > 20)
    then
        System.out.println("==========Adding 10% discount for Kids/ senior customer=============");
        orderDiscount.setDiscount(orderDiscount.getDiscount() + 10);
end